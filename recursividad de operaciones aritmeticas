def sumarecursiva (A,B):
    if B == 0:
        return A
    elif A == 0:
        return B
    else: return 1 + sumarecursiva(A,B - 1)

print (sumarecursiva (8,5)) 

def restarecursiva (A,B):
    if B == 0:
        return A
    elif A == 0:
        return B
    else: return 1 - restarecursiva(A,B + 1)

print (sumarecursiva (8,5)) 
